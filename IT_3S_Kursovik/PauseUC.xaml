<UserControl x:Class="IT_3S_Kursovik.PauseUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IT_3S_Kursovik"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="497*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/assets/r.png"></ImageBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" 
                   Margin="0,10,0,0" Grid.Row="1" 
                   TextWrapping="Wrap" Text="ПАУЗА" 
                   FontSize="48"
                   FontFamily="Better VCR Regular"
                   VerticalAlignment="Top"/>
        <Button x:Name="Exit1"
            Content="Выйти" HorizontalAlignment="Center" 
                Height="90" Margin="0,304,0,0" Grid.Row="1" 
                VerticalAlignment="Top" Width="126"
                FontFamily="Better VCR Regular" Click="Button_Click"/>

    </Grid>
</UserControl>
