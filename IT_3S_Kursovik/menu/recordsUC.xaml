                   TextWrapping="Wrap" 
                   Text=""
                   FontSize="24"
                   FontFamily="Better VCR Regular"
                   VerticalAlignment="Top" 
                   Height="271" 
                   Width="590" Grid.Row="2" Margin="0,44,0,0"/>
        <Button Content="Выход" 
                HorizontalAlignment="Center" 
                Height="40" 
                VerticalAlignment="Top"
                Width="176" 
                Click="Button_Click" 
                FontSize="24"
                FontFamily="Better VCR Regular"
                Background="#00DDDDDD"
                BorderBrush="Black"
                BorderThickness="3" Grid.Row="2" Margin="0,329,0,0" Grid.RowSpan="2"/>
