        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="331*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/assets/r.png" Stretch="None"/>
